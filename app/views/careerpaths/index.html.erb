<div>
  <div>
    <h1>
      List of all careerpaths
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new careerpath
    </h2>

    <form action="/insert_careerpath" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create careerpath
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_careerpaths.each do |a_careerpath| %>
      <tr>
        <td>
          <%= a_careerpath.id %>
        </td>

        <td>
          <%= a_careerpath.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_careerpath.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_careerpath.updated_at) %> ago
        </td>

        <td>
          <a href="/careerpaths/<%= a_careerpath.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
