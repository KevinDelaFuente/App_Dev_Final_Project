<div>
  <div>
    <h1>
      List of all courses
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Professor
        </th>

        <th>
          Skill
        </th>

        <th>
          Rating
        </th>

        <th>
          Hours required
        </th>

        <th>
          Student Likes
        </th>

        <th>
          Like?
        </th>

        <th>
          Details
        </th>


        <th>
        </th>
      </tr>

      <% @list_of_courses.each do |a_course| %>
      <tr>
        <td>
          <%= a_course.id %>
        </td>

        <td>
          <%= a_course.title %>
        </td>

        <td>
          <%= a_course.description %>
        </td>

        <td>
          <%= a_course.professor_id %>
        </td>

        <td>
          <%= a_course.skill_id %>
        </td>

        <td>
          <%= a_course.rating %>
        </td>

        <td>
          <%= a_course.hours_required %>
        </td>

        <td>
          <%= a_course.likes_count %>
        </td>

        <td>
          <% if a_course.likes.first != nil && a_course.likes.first.user_id == session[:user_id] %>
            Liked
          <% else%>
            not liked
          <% end%>
        </td>

        <td>
          <a href="/courses/<%= a_course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
