<div>
  <div>
    <h1>
      Credit #<%= @the_credit.id %> details
    </h1>

    <div>
      <div>
        <a href="/credits">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_credit/<%= @the_credit.id %>">
          Delete credit
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_credit.user_id %>
      </dd>

      <dt>
        Course
      </dt>
      <dd>
        <%= @the_credit.course_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_credit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_credit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit credit
    </h2>

    <form action="/modify_credit/<%= @the_credit.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_credit.user_id %>">
      </div>

      <div>
        <label for="course_id_box">
          Course
        </label>

        <input type="text" id="course_id_box" name="query_course_id" value="<%= @the_credit.course_id %>">
      </div>

      <button>
        Update credit
      </button>
    </form>
  </div>
</div>

<hr>
