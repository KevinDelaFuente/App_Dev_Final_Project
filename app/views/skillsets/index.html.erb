<div>
  <div>
    <h1>
      List of all skillsets
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new skillset
    </h2>

    <form action="/insert_skillset" method="post">
      <div>
        <label for="skill_id_box">
          Skill
        </label>

        <input type="text" id="skill_id_box" name="query_skill_id">
      </div>

      <div>
        <label for="careerpath_id_box">
          Careerpath
        </label>

        <input type="text" id="careerpath_id_box" name="query_careerpath_id">
      </div>

      <button>
        Create skillset
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Skill
        </th>

        <th>
          Careerpath
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_skillsets.each do |a_skillset| %>
      <tr>
        <td>
          <%= a_skillset.id %>
        </td>

        <td>
          <%= a_skillset.skill_id %>
        </td>

        <td>
          <%= a_skillset.careerpath_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_skillset.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_skillset.updated_at) %> ago
        </td>

        <td>
          <a href="/skillsets/<%= a_skillset.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
